#!/bin/bash
if [ -z "$RABBITHUB_HOME" ]
then
    RABBITHUB_HOME=$HOME/.rabbithub
    mkdir -p $RABBITHUB_HOME
fi
if [ -z "$RABBITHUB_NODE" ]
then
    RABBITHUB_NODE=rabbithub
fi

cd $RABBITHUB_HOME
exec erl -pa @TARGET_DIR@/ebin @TARGET_DIR@/deps/*/ebin -boot start_sasl -sname $RABBITHUB_NODE -s rabbithub "$@"
